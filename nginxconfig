server {
       listen 80;
       listen [::]:80;

       server_name tuffix-vm;

        location = /auth {
               internal;
               proxy_pass http://localhost:5000/login/;
       }

       location /registeruser/ {
               proxy_pass http://localhost:5000/registeruser/;
       }

       location /login/ {
               auth_request /auth;
               proxy_pass http://localhost:5000/login/;
       }
       

       location /startgame/ {
               auth_request /auth;
               proxy_pass http://backend;
       }

       location /gamestate/ {
               auth_request /auth;
               proxy_pass http://backend;
       }

       location /guess/ {
               auth_request /auth;
               proxy_pass http://backend;
       }

       location /games/ {
               auth_request /auth;
               proxy_pass http://backend;
       }

       location /leaderboard {
               proxy_pass http://localhost:5050/leaderboard;
       }
}

upstream backend {
 server localhost:5100;
 server localhost:5200;
 server localhost:5300;
}
